<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/forget_div1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#424040">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/backkey"
                android:tint="#ffff"/>
            <TextView
                android:id="@+id/regisiter_div_1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:text="忘記密碼"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_weight="3"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_div2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_below="@+id/forget_div1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/password"
                    android:tint="#424040"
                    android:layout_marginRight="25dp"/>
                <EditText
                    android:id="@+id/Password_check"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/accounting_frame"
                    android:hint="輸入E-mail取得新密碼"
                    android:textSize="14dp"
                    android:textColorHint="#C9C9C9"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="30dp">
            <Button

                android:background="@drawable/register_button"
                android:id="@+id/register_submit"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:text="傳送"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>