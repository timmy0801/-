<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424040">
    <LinearLayout
        android:id="@+id/div_main1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#424040">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/invoiceback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/backkey"
                android:tint="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="電子發票對獎"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/div_main1">
        <ImageButton
            android:id="@+id/previous"
            android:src="@drawable/left_arrow"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/showmonth"
            android:layout_width="120dp"
            android:layout_height="29dp"
            android:gravity="center"
            android:text="月份"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>//發票對獎兩個月為一個週期
        <ImageButton
            android:id="@+id/next"
            android:hint="next"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/right_arrow"
            android:tint="#FFFFFF"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/data_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>