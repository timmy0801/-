<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#424040">
            <ImageButton
                android:id="@+id/project_backtohome"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@drawable/backkey"
                android:tint="#ffff" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="創建Juuu專案"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFFF"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/addnewproject_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/confirm"
                android:tint="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/set_project_name"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:hint="輸入專案名稱" />
            //放專案預設貨幣
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/Project_setFriend"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_drop_down_shape"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    />
                <Spinner
                    android:id="@+id/Project_setCurrency"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/spinner_drop_down_shape"
                    android:entries="@array/datamoney"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            //放已標的人
            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center|left">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/Project_chipgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/accounting_frame">
                <ImageView
                    android:id="@+id/note"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/note"
                    android:layout_marginVertical="7dp"/>
                <EditText
                    android:id="@+id/project_note"
                    android:hint="為您的專案加點描述吧！"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:gravity="top"
                    android:layout_toRightOf="@+id/note"
                    android:paddingTop="8dp"
                    android:background="@drawable/account_icon_bg"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


