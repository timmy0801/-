<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/user_change_photo_div1">


        <ImageButton
            android:id="@+id/User_Image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/usericon" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/user_change_photo_div2"
        android:orientation="vertical"
        android:layout_below="@+id/user_change_photo_div1">
        <TextView
            android:id="@+id/U_ris_Username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_change_photo_div2"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Email"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/U_email"
                    android:gravity="center_vertical"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="14dp"
                    android:background="@drawable/register_edittext"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="14dp" />
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="14dp"
                    android:background="@drawable/register_edittext"/>//android:id="@+id/U_username"

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="暱稱"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/user_nickname"
                    android:gravity="center_vertical"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="14dp"
                    android:background="@drawable/register_edittext"/>android:id="@+id/U_ris_Username"
            </LinearLayout>
            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="個人代碼"
                    android:textSize="14dp" />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/U_id"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textSize="14dp"
                    android:background="@drawable/register_edittext"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/pic_send"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/register_button"
            android:text="照片儲存"
            android:textSize="16dp"
            android:textColor="#ffff" />
    </LinearLayout>
</RelativeLayout>