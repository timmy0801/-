<resources>

    <!-- Base application theme. -->


    <style name="tabinout_tabsize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#424040</item>
        <item name="chipIconTint">#FF9C9C9C</item>
    </style>


    <style name="AppTheme.chip" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--浮動游標顏色+button預設顏色-->
        <item name="colorAccent">#424040</item>
        <!--文字前面的圖標着色-->
        <item name="chipIconTint">#DB8989</item>
        <!--tint着色-->
        <item name="android:textColor">#424040</item>
    </style>

