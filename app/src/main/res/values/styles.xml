    <style name="ActivityAnim">
        <!-- Enter B Activity -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>   <!-- For B Activity -->
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>             <!-- For A Activity -->
        <!-- Return B Activity -->
